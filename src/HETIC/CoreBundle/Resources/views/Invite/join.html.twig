{% extends 'HETICAppBundle::layout.html.twig' %}

{% block main %}
    <main id="joinStartup" role="main">
        <div class="container">
            <div class="row">
                <div class="col-sm-5">
                    {{form_start(form)}}
                        <h2>Rejoignez la startup {{startup.name}}</h2>
                        <div class="form-group">
                            {{form_widget(form.lastname)}}
                        </div>
                        <div class="form-group">
                            {{form_widget(form.firstname)}}
                        </div>
                        <div class="form-group">
                            {{form_widget(form.email)}}
                        </div>
                        <div class="form-group">
                            {{form_widget(form.phone)}}
                        </div>
                        <div class="form-group">
                            {{form_widget(form.save)}}
                        </div>
                    {{form_end(form)}}
                </div>
            </div>
        </div>
        <img src="{{asset('bundles/heticapp/img/guy.png')}}" class="guy">
    </main>
{% endblock %}
